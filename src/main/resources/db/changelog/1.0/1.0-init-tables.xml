<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="1.0-init-tables" author="bdb">

        <createTable tableName="category">
            <column name="id"
                    type="INT"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="PK_category_id"/>
            </column>

            <column name="code"
                    type="VARCHAR(4)"/>
            <column name="name"
                    type="VARCHAR(64)"/>
            <column name="description"
                    type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="author">
            <column name="id"
                    type="INT"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="PK_author_id"/>
            </column>

            <column name="firstname"
                    type="VARCHAR(64)"/>
            <column name="lastname"
                    type="VARCHAR(64)"/>
        </createTable>

        <createTable tableName="book">
            <column name="id"
                    type="INT"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="PK_book_id"/>
            </column>

            <column name="title"
                    type="VARCHAR(255)"/>
            <column name="author"
                    type="INT">
                <constraints foreignKeyName="FK_book_author_id"
                             references="author(id)"/>
            </column>
            <column name="category"
                    type="INT">
                <constraints foreignKeyName="FK_book_category_id"
                             references="category(id)"/>
            </column>
            <column name="status"
                    type="VARCHAR(64)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>